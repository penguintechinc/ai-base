# NVIDIA Variant Configuration
# Optimized for NVIDIA GPUs with CUDA support

# GPU Configuration
GPU_BACKEND=cuda
GPU_VARIANT=nvidia

# CUDA Settings
CUDA_VISIBLE_DEVICES=0
CUDA_HOME=/usr/local/cuda
CUDA_DEVICE_ORDER=PCI_BUS_ID

# Fallback to Vulkan if CUDA unavailable
VK_LAYER_PATH=/opt/vulkan-sdk/etc/vulkan/explicit_layer.d
VULKAN_SDK=/opt/vulkan-sdk

# Model Paths
OLLAMA_MODELS=/models/ollama
LLAMA_MODELS=/models/llama
EXO_MODELS=/models/exo

# Logging
LOG_LEVEL=info

# Ollama Configuration (uses Vulkan fallback)
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_GPU_BACKEND=vulkan
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=1

# llama.cpp CUDA Settings
LLAMA_CUBLAS=1
LLAMA_CUDA_DMMV_X=32
LLAMA_CUDA_MMV_Y=1

# EXO Configuration
EXO_MODE=standalone
EXO_DISCOVERY_PORT=5678

# NVIDIA Performance Tuning
CUDA_LAUNCH_BLOCKING=0
CUDA_CACHE_MAXSIZE=2147483648
OMP_NUM_THREADS=8
