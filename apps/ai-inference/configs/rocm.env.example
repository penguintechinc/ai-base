# ROCm Variant Configuration
# Optimized for AMD GPUs with ROCm support

# GPU Configuration
GPU_BACKEND=rocm
GPU_VARIANT=rocm

# ROCm Settings
ROCM_PATH=/opt/rocm
HSA_OVERRIDE_GFX_VERSION=10.3.0
HIP_VISIBLE_DEVICES=0
GPU_DEVICE_ORDINAL=0

# Fallback to Vulkan if ROCm unavailable
VK_LAYER_PATH=/opt/vulkan-sdk/etc/vulkan/explicit_layer.d
VULKAN_SDK=/opt/vulkan-sdk

# Model Paths
OLLAMA_MODELS=/models/ollama
LLAMA_MODELS=/models/llama
EXO_MODELS=/models/exo

# Logging
LOG_LEVEL=info

# Ollama Configuration (uses Vulkan fallback)
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_GPU_BACKEND=vulkan
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=1

# llama.cpp ROCm Settings
LLAMA_HIPBLAS=1

# EXO Configuration
EXO_MODE=standalone
EXO_DISCOVERY_PORT=5678

# AMD Performance Tuning
HSA_ENABLE_SDMA=0
AMD_DIRECT_DISPATCH=1
OMP_NUM_THREADS=8
